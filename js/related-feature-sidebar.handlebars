<xmp>
    <style>
        .related-project-box {
            border-top: 5px solid #ccc;
            border-bottom: 1px solid #ccc;
            width: 100%;
            margin: 0 0 24px 0;
            float: right;
            clear: right;
        }

        .related-project-box h2 {
            font-family: Sanchez Bold, helvetica, sans-serif;
            font-size: 14px;
            font-weight: normal;
            color: #222;
            text-transform: uppercase;
            width: 100%;
            background: transparent;
            line-height: 30px;
            height: 30px;
            border-bottom: 1px solid #ccc;
            margin: 0 0 16px 0;
            padding: 0;
        }

        .related-project-box .img-wrap {
            width: 100%;
            height: 200px;
            margin: 0;
            padding: 0;
            position: relative;
            overflow: hidden;
        }

        .related-project-box .img-wrap img {
            width: 100%;
            height: auto;
            position: absolute;
            top: -9999px;
            bottom: -9999px;
            left: -9999px;
            right: -9999px;
            margin: auto;
        }

        .related-project-box h3 {
            font-family: Pierpont-bold, serif;
            font-size: 32px;
            line-height: 36px;
            margin: 1% auto;
            text-align: left;
        }

        .related-project-box p {
            font-family: Georgia, serif;
            font-size: 14px;
            line-height: 24px;
        }

        @media (min-width: 768px) {
            .related-project-box {
                width: 300px;
                margin: 0 0 40px 68px;
            }
        }
    </style>

    <div class="related-project-box">
        <h2>Related Feature</h2>
        <div class="img-wrap">
            <a href="{{storyLink}}" title="{{headline}}">
                <img src="{{image}}" />
            </a>
        </div>
        <a href="{{storyLink}}" title="{{headline}}">
            <h3>{{headline}}</h3>
        </a>
        <p>{{chatter}}
            <a href="{{storyLink}}" title="{{headline}}">Read now.</a>
        </p>
    </div>
